package org.wissing.CharacterRandomization;

public abstract class Classes {
	private int[] Statistics = new int[6];
	public int getStrength(){
		return Statistics[0];
	}
	public int getDex(){
		return Statistics[1];
	}
	public int getCon(){
		return Constitution;
	}
	public int getInt(){
		return Intelligence;
	}
	public int getWisdom(){
		return Wisdom;
	}
	public int getChar(){
		return Charisma;
	}
	public void setStrength(int x){
		Strength = x;
	}
	public void setDex(int x){
		Dexterity = x;
	}
	public void setCon(int x){
		Constitution = x;
	}
	public void setInt(int x){
		Intelligence = x;
	}
	public void setWisdom(int x){
		Wisdom = x;
	}
	public void setChar(int x){
		Charisma = x;
	}
